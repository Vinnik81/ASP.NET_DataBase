@model Post
@{
    ViewData["Title"] = "AddPost";
}

<h1>Edit Post</h1>

<form asp-action="Edit" asp-controller="Post" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <input hidden asp-asp-for="ImageUrl" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Recipient's title" aria-label="Recipient's title" aria-describedby="button-addon2">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    

    <div class="form-group">
        <label asp-for="CategoryId" class="mb-1"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

   

    <div class="form-group">
        <label class="mb-1">Tags: </label>
        <select name="tags" id="tags" asp-items="ViewBag.Tags" multiple class="form-control">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="mb-1"></label>
        <textarea asp-for="Content" rows="5" id="content" name="Content" class="form-control" placeholder="Recipient's title" aria-label="Recipient's title" aria-describedby="button-addon2"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <img src="@Model.ImageUrl" height="200" />

    <div class="input-group mt-3">
        <input name="ImageUrl" type="file" class="form-control" id="ImageUrl">
        <label class="input-group-text" for="ImageUrl">Upload</label>
    </div>


    <button class="btn btn-primary mt-2 w-25">Add</button>
</form>







