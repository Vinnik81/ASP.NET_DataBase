@model Post
@{
    ViewData["Title"] = "AddPost";
}

<h1>AddPost</h1>

<form asp-action="Add" asp-controller="Post" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Recipient's title" aria-label="Recipient's title" aria-describedby="button-addon2">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    @* <div class="form-group">
    <label asp-for="ImageUrl"  class="mb-1"></label>
    <input asp-for="ImageUrl" class="form-control" placeholder="Recipient's img" aria-label="Recipient's img" aria-describedby="button-addon2">
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>*@



    <div class="form-group">
        <label asp-for="Content" class="mb-1"></label>
        <textarea asp-for="Content" rows="5" id="content" name="Content" class="form-control" placeholder="Recipient's title" aria-label="Recipient's title" aria-describedby="button-addon2"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="input-group mt-3">
        <input name="ImageUrl" type="file" class="form-control" id="ImageUrl">
        <label class="input-group-text" for="ImageUrl">Upload</label>
    </div>


    <button class="btn btn-primary mt-2 w-25">Add</button>
</form>







